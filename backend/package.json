{
  "name": "task-manager-backend",
  "version": "1.0.0",
  "description": "Task Manager API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:docker:up": "docker-compose up -d",
    "db:docker:down": "docker-compose down",
    "db:docker:restart": "docker-compose restart",
    "db:setup": "npm run db:docker:up && sleep 5 && npm run db:generate && npm run db:migrate && npm run db:seed",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "tsx src/db/seed.ts"
  },
  "prisma": {
    "seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "xss-clean": "^0.1.4",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.24",
    "prisma": "^6.19.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
